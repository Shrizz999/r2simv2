<?xml version="1.0" encoding="utf-8"?>
<robot name="r2krishna">
  
  <link name="base_footprint">
    <inertial>
      <mass value="0.001"/>
      <inertia ixx="0.000001" ixy="0" ixz="0" iyy="0.000001" iyz="0" izz="0.000001"/>
    </inertial>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <inertial>
      <origin xyz="0.0045 0.013 0.062" rpy="0 0 0" />
      <mass value="17.72" />
      <inertia ixx="0.157" ixy="0.001" ixz="-0.006" iyy="0.199" iyz="0.00004" izz="0.322" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://r2krishna/meshes/base.STL" />
      </geometry>
      <material name="white">
        <color rgba="1 1 1 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.05" rpy="0 0 0" />
      <geometry>
        <box size="0.6 0.4 0.15" />
      </geometry>
    </collision>
  </link>

  <link name="lidar_link">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.04"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.1"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <joint name="lidar_joint" type="fixed">
    <parent link="base_link"/>
    <child link="lidar_link"/>
    <origin xyz="0 0 0.25" rpy="0 0 0"/>
  </joint>

  <link name="camera_link">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.05"/>
      </geometry>
      <material name="red">
        <color rgba="1 0 0 1"/>
      </material>
    </visual>
    <inertial>
      <mass value="0.05"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.3 0 0.1" rpy="0 0 0"/>
  </joint>

  <link name="left_rover_side">
    <inertial><origin xyz="-0.026 0 -0.145" rpy="0 0 0"/><mass value="4.3"/><inertia ixx="0.006" ixy="0" ixz="0" iyy="0.009" iyz="0" izz="0.007"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_rover_side.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0 -0.05" rpy="0 0 0"/><geometry><box size="0.5 0.05 0.2"/></geometry></collision>
  </link>
  <joint name="left_rover_side_joint" type="revolute">
    <origin xyz="0.15102 -0.30007 -0.086319" rpy="0 0 0"/><parent link="base_link"/><child link="left_rover_side"/><axis xyz="0 1 0"/><limit lower="-6.28" upper="6.28" effort="200" velocity="10"/>
  </joint>

  <link name="left_1"> <inertial><origin xyz="0 -0.04 0" rpy="0 0 0"/><mass value="1.35"/><inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.0029"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_1.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 -0.02 0" rpy="1.5707 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
  </link>
  <joint name="left_1_joint" type="continuous">
    <origin xyz="-0.1526 -0.008 -0.1471" rpy="0 0 0"/><parent link="left_rover_side"/><child link="left_1"/><axis xyz="0 1 0"/>
  </joint>

  <link name="left_2"> <inertial><origin xyz="0 -0.04 0" rpy="0 0 0"/><mass value="1.35"/><inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.0029"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/left_2.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 -0.02 0" rpy="1.5707 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
  </link>
  <joint name="left_2_joint" type="continuous">
    <origin xyz="-0.2988 -0.30407 -0.2365" rpy="0 0 0"/><parent link="base_link"/><child link="left_2"/><axis xyz="0 1 0"/>
  </joint>

  <link name="right_rover_side">
    <inertial><origin xyz="-0.026 0 -0.145" rpy="0 0 0"/><mass value="4.3"/><inertia ixx="0.006" ixy="0" ixz="0" iyy="0.009" iyz="0" izz="0.007"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_rover_side.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0 -0.05" rpy="0 0 0"/><geometry><box size="0.5 0.05 0.2"/></geometry></collision>
  </link>
  <joint name="right_rover_side_joint" type="revolute">
    <origin xyz="0.15102 0.29593 -0.086319" rpy="0 0 0"/><parent link="base_link"/><child link="right_rover_side"/><axis xyz="0 -1 0"/><limit lower="-6.28" upper="6.28" effort="200" velocity="10"/>
  </joint>

  <link name="right_1"> <inertial><origin xyz="0 0.04 0" rpy="0 0 0"/><mass value="1.35"/><inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.0029"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_1.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0.02 0" rpy="1.5707 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
  </link>
  <joint name="right_1_joint" type="continuous">
    <origin xyz="-0.1526 0.01 -0.1471" rpy="0 0 0"/><parent link="right_rover_side"/><child link="right_1"/><axis xyz="0 -1 0"/>
  </joint>

  <link name="right_2"> <inertial><origin xyz="0 0.04 0" rpy="0 0 0"/><mass value="1.35"/><inertia ixx="0.0029" ixy="0" ixz="0" iyy="0.0054" iyz="0" izz="0.0029"/></inertial>
    <visual><geometry><mesh filename="package://r2krishna/meshes/right_2.STL"/></geometry><material name="white"/></visual>
    <collision><origin xyz="0 0.02 0" rpy="1.5707 0 0"/><geometry><cylinder radius="0.15" length="0.05"/></geometry></collision>
  </link>
  <joint name="right_2_joint" type="continuous">
    <origin xyz="-0.2988 0.30193 -0.2365" rpy="0 0 0"/><parent link="base_link"/><child link="right_2"/><axis xyz="0 -1 0"/>
  </joint>

  <link name="tri_1"> <inertial><origin xyz="0 0 0" rpy="0 0 0"/><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
     <visual><geometry><mesh filename="package://r2krishna/meshes/tri_1.STL"/></geometry><material name="white"/></visual>
     <collision><origin xyz="0 -0.04 0" rpy="0 0 0"/><geometry><box size="0.2 0.05 0.2"/></geometry></collision>
  </link>
  <joint name="tri_1_joint" type="revolute">
    <origin xyz="0.14714 -0.008 -0.15264" rpy="0 0 0"/><parent link="left_rover_side"/><child link="tri_1"/><axis xyz="0 1 0"/><limit lower="-6.28" upper="6.28" effort="10" velocity="10"/>
  </joint>

  <link name="tri_2"> <inertial><origin xyz="0 0 0" rpy="0 0 0"/><mass value="0.5"/><inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/></inertial>
     <visual><geometry><mesh filename="package://r2krishna/meshes/tri_2.STL"/></geometry><material name="white"/></visual>
     <collision><origin xyz="0 0.04 0" rpy="0 0 0"/><geometry><box size="0.2 0.05 0.2"/></geometry></collision>
  </link>
  <joint name="tri_2_joint" type="revolute">
    <origin xyz="0.14714 0.01 -0.15264" rpy="0 0 0"/><parent link="right_rover_side"/><child link="tri_2"/><axis xyz="0 -1 0"/><limit lower="-6.28" upper="6.28" effort="10" velocity="10"/>
  </joint>

  <link name="tri1_top"><visual><geometry><mesh filename="package://r2krishna/meshes/tri1_top.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri1_top_joint" type="continuous"><origin xyz="0 -0.074 0.13" rpy="0 0 0"/><parent link="tri_1"/><child link="tri1_top"/><axis xyz="0 1 0"/></joint>
  
  <link name="tri1_right"><visual><geometry><mesh filename="package://r2krishna/meshes/tri1_right.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri1_right_joint" type="continuous"><origin xyz="0.0514 -0.074 -0.0581" rpy="0 0 0"/><parent link="tri_1"/><child link="tri1_right"/><axis xyz="0 1 0"/></joint>

  <link name="tri1_left"><visual><geometry><mesh filename="package://r2krishna/meshes/tri1_left.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri1_left_joint" type="continuous"><origin xyz="-0.0514 -0.074 -0.0581" rpy="0 0 0"/><parent link="tri_1"/><child link="tri1_left"/><axis xyz="0 1 0"/></joint>

  <link name="tri2_top"><visual><geometry><mesh filename="package://r2krishna/meshes/tri2_top.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri2_top_joint" type="continuous"><origin xyz="0 0.074 0.13" rpy="0 0 0"/><parent link="tri_2"/><child link="tri2_top"/><axis xyz="0 -1 0"/></joint>

  <link name="tri2_right"><visual><geometry><mesh filename="package://r2krishna/meshes/tri2_right.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri2_right_joint" type="continuous"><origin xyz="-0.0514 0.074 -0.0581" rpy="0 0 0"/><parent link="tri_2"/><child link="tri2_right"/><axis xyz="0 -1 0"/></joint>

  <link name="tri2_left"><visual><geometry><mesh filename="package://r2krishna/meshes/tri2_left.STL"/></geometry><material name="white"/></visual></link>
  <joint name="tri2_left_joint" type="continuous"><origin xyz="0.0514 0.074 -0.0581" rpy="0 0 0"/><parent link="tri_2"/><child link="tri2_left"/><axis xyz="0 -1 0"/></joint>

  <gazebo>
    <plugin filename="gz-sim-diff-drive-system" name="gz::sim::systems::DiffDrive">
      
      <left_joint>tri_1_joint</left_joint>
      <left_joint>left_1_joint</left_joint>
      <left_joint>left_2_joint</left_joint>

      <right_joint>tri_2_joint</right_joint>
      <right_joint>right_1_joint</right_joint>
      <right_joint>right_2_joint</right_joint>

      <wheel_separation>0.6</wheel_separation>
      <wheel_radius>0.15</wheel_radius>
      
      <topic>/cmd_vel</topic>
      <min_velocity>-5.0</min_velocity>
      <max_velocity>5.0</max_velocity>
      <min_acceleration>-10.0</min_acceleration>
      <max_acceleration>10.0</max_acceleration>

      <odom_publish_frequency>50</odom_publish_frequency>
      
      <odom_topic>/model/r2krishna/odometry</odom_topic>
      <tf_topic>/model/r2krishna/tf</tf_topic>
      
      <frame_id>odom</frame_id>
      <child_frame_id>base_footprint</child_frame_id>
    </plugin>
    
    <plugin filename="gz-sim-joint-state-publisher-system" name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
    </plugin>
  </gazebo>

  <gazebo reference="lidar_link">
    <sensor name="lidar" type="gpu_lidar">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>10</update_rate>
      <topic>/scan</topic>
      <ray>
        <scan>
          <horizontal>
            <samples>360</samples>
            <resolution>1</resolution>
            <min_angle>-3.14</min_angle>
            <max_angle>3.14</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.55</min> <max>10.0</max>
        </range>
      </ray>
    </sensor>
  </gazebo>

  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
      <pose>0 0 0 0 0 0</pose>
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>30</update_rate>
      <topic>/camera/image_raw</topic>
      <camera>
        <horizontal_fov>1.047</horizontal_fov>
        <image>
          <width>640</width>
          <height>480</height>
        </image>
        <clip>
          <near>0.1</near>
          <far>100</far>
        </clip>
      </camera>
    </sensor>
  </gazebo>

</robot>
